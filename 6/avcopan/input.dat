# doublet H2O+

molecule mol {
  1 2
  O
  H 1 0.96
  H 1 0.96 2 104.5
}

set {
  reference uhf
  basis sto-3g
  e_convergence 13
  scf_type pk
  mp2_type conv
  MAXITER 50
}

basisname = psi4.get_global_option("BASIS")
basisset  = psi4.BasisSet.pyconstruct_orbital(mol, "BASIS", basisname)
mints     = psi4.MintsHelper(basisset)

# Call your Hartree-Fock code here
from mp2 import MP2

mp2 = MP2(mol, mints)
mp2.compute_energy()

# check your answer
print('Compare to:')
print('{:27.15f}'.format(energy('mp2')))
